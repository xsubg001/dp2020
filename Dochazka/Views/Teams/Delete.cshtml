@model Dochazka.Models.TeamModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<p class="text-danger">@ViewBag.ErrorMessage</p>

@if (ViewBag.CanBeDeleted)
{
    <h3>Are you sure you want to delete this team?</h3>
}

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PrimaryManager)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PrimaryManager.FullName)
        </dd>
        <dt class="col-sm-3">
            @Dochazka.Data.CommonConstants.TEAM_MANAGER_USERNAME
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PrimaryManager.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (ViewBag.CanBeDeleted)
        {
            <input type="hidden" asp-for="TeamModelId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <text> | </text>
        }
        <a asp-action="Index">Back to List</a>
    </form>
</div>
