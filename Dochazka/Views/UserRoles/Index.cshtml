@using Dochazka.Models
@*@model List<Dochazka.Models.UserRolesViewModel>*@
@model PaginatedList<Dochazka.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h1>User Roles</h1>

<form asp-controller="UserRoles" asp-action="Index">
    <p>
        Search by Full Name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]">
        <input type="submit" value="Filter" />
        <a asp-action="Index">Back to Full List</a>
    </p>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>                
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Full Name</a>
            </th>
            <th>Email</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TeamSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Team Name</a>
            </th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.TeamName</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    @Html.ActionLink("Manage", "Manage", new { user.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>



@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>