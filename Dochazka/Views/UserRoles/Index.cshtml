@using Dochazka.Models
@model List<Dochazka.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>TeamName</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.TeamName</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                @Html.ActionLink("Manage Roles", "Manage", new { user.Id }) |
                @Html.ActionLink("Delete", "Delete", new { user.Id })
            </td>
        </tr>
        }
    </tbody>
</table>