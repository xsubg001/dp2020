@model ManageUserViewModel
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="Post">
    <div class="card">
        <div class="card-header">
            <h1>Manage user</h1>            
            <h4>@ViewBag.UserName</h4>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="form-group">
                <label asp-for="@Model.TeamId">Select user team membership</label>
                <select asp-for="@Model.TeamId" class="form-control" asp-items="ViewBag.Teams"></select>
                <span asp-validation-for="@Model.TeamId" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.RoleSelections.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model.RoleSelections[i].RoleId" />
                    <input type="hidden" asp-for="@Model.RoleSelections[i].RoleName" />
                    <input asp-for="@Model.RoleSelections[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.RoleSelections[i].Selected">
                        @Model.RoleSelections[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Index"  class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>